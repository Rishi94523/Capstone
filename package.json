{
  "name": "pouw-captcha",
  "version": "0.1.0",
  "description": "Proof-of-Useful-Work CAPTCHA System",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=packages/widget",
    "build": "npm run build --workspaces",
    "build:widget": "npm run build --workspace=packages/widget",
    "build:sdk": "npm run build --workspace=packages/sdk",
    "test": "npm run test --workspaces --if-present",
    "test:widget": "npm run test --workspace=packages/widget",
    "test:sdk": "npm run test --workspace=packages/sdk",
    "lint": "eslint packages --ext .ts,.tsx,.js",
    "lint:fix": "eslint packages --ext .ts,.tsx,.js --fix",
    "format": "prettier --write \"packages/**/*.{ts,tsx,js,json,css}\"",
    "format:check": "prettier --check \"packages/**/*.{ts,tsx,js,json,css}\"",
    "typecheck": "tsc --noEmit",
    "clean": "rimraf packages/*/dist packages/*/.turbo"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.0",
    "rimraf": "^5.0.5",
    "typescript": "^5.3.2"
  },
  "lint-staged": {
    "*.{ts,tsx,js}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,css}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/pouw-captcha.git"
  },
  "author": "PoUW Team",
  "license": "MIT"
}
