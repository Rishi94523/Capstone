# PoUW CAPTCHA Environment Configuration

# ===========================================
# Server Configuration
# ===========================================
HOST=0.0.0.0
PORT=8000
DEBUG=true
LOG_LEVEL=INFO

# ===========================================
# Database Configuration
# ===========================================
DATABASE_URL=postgresql://pouw:pouw_secret@localhost:5432/pouw_captcha
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# ===========================================
# Redis Configuration
# ===========================================
REDIS_URL=redis://localhost:6379/0
REDIS_SESSION_DB=0
REDIS_CACHE_DB=1
REDIS_RATE_LIMIT_DB=2

# ===========================================
# Security
# ===========================================
SECRET_KEY=your-super-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRY_MINUTES=5
CAPTCHA_TOKEN_EXPIRY_SECONDS=300

# ===========================================
# CORS Configuration
# ===========================================
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://127.0.0.1:3000
ALLOWED_HOSTS=localhost,127.0.0.1

# ===========================================
# ML Configuration
# ===========================================
MODEL_CDN_URL=https://cdn.pouw.dev/models
SAMPLE_CDN_URL=https://cdn.pouw.dev/samples
DEFAULT_MODEL=cifar10-mobilenet
INFERENCE_TIMEOUT_MS=10000

# ===========================================
# Task Coordinator
# ===========================================
NORMAL_DIFFICULTY_TIME_MS=500
SUSPICIOUS_DIFFICULTY_TIME_MS=3000
BOT_DIFFICULTY_TIME_MS=10000
VERIFICATION_RATE=0.2
KNOWN_SAMPLE_RATE=0.1

# ===========================================
# Reputation System
# ===========================================
INITIAL_REPUTATION=1.0
MAX_REPUTATION=5.0
MIN_REPUTATION=0.0
CORRECT_VERIFICATION_BONUS=0.1
INCORRECT_VERIFICATION_PENALTY=0.2

# ===========================================
# Golden Dataset
# ===========================================
MIN_VERIFICATIONS_FOR_CONSENSUS=3
CONSENSUS_THRESHOLD=0.8
DISCARD_THRESHOLD=0.6

# ===========================================
# Rate Limiting
# ===========================================
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST=10

# ===========================================
# Federated Learning (Phase 2)
# ===========================================
FL_ENABLED=false
FL_MIN_CLIENTS=10
FL_GRADIENT_CLIP_NORM=1.0
FL_DIFFERENTIAL_PRIVACY_EPSILON=1.0
FL_NOISE_MULTIPLIER=1.1

# ===========================================
# AWS Configuration (Production)
# ===========================================
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
S3_BUCKET_MODELS=pouw-models
S3_BUCKET_SAMPLES=pouw-samples
