# PoUW CAPTCHA Widget Development
FROM node:20-alpine

WORKDIR /app

# Copy package files
COPY packages/widget/package*.json ./

# Install dependencies
RUN npm install

# Copy source
COPY packages/widget/ .

# Expose Vite dev server port
EXPOSE 5173

# Default command
CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0"]
